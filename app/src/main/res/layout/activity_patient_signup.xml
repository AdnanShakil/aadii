<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adnanshakeel.healthcare.PatientDetailActivity"
    android:orientation="vertical"
    android:background="#bdbdbd">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME:"
        android:id="@+id/txtName"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtName1"
        android:hint="Enter Your Name Here"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE:"
        android:id="@+id/txtAge"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAge1"
        android:hint="Enter Your Age Here"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADDRESS:"
        android:id="@+id/txtAddress"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAddress1"
        android:hint="Enter Your Address Here"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CNIC#:"
        android:id="@+id/txtCnic"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCnic1"
        android:hint="*****-*******-*"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE#:"
        android:id="@+id/txtPhone"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPhone1"
        android:hint="03**-*******"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENDER:"
        android:id="@+id/txtGender"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        />

    <RadioButton
        android:layout_marginTop="5dp"
        android:id="@+id/btnRadio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Male"
        android:layout_marginLeft="10dp"/>

    <RadioButton
        android:id="@+id/btnRadio2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:text="Female"
        android:layout_marginLeft="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:textSize="30dp"
            android:id="@+id/btnSignIn"
            android:background="@color/Transparent"
            android:textColor="@color/colorPrimary"
            android:layout_marginVertical="20dp"/>



    </LinearLayout>

</LinearLayout>




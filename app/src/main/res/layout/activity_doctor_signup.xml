<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adnanshakeel.healthcare.DoctorSignupActivity"
    android:orientation="vertical"
    android:background="#bdbdbd">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSigninName"
        android:text="Name:"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginHorizontal="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editSigninName"
        android:inputType="text"
        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSigninEmail"
        android:text="E-mail:"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editSigninEmail"
        android:inputType="textEmailAddress"
        android:textSize="20dp"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSigninPassword"
        android:text="Password:"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginHorizontal="10dp"/>

    <EditText

        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editSigninPassword"
        android:inputType="textPassword"
        android:textSize="20dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSigninConfirm"
        android:text="Confirm Password:"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginHorizontal="10dp"/>
    <EditText
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editSigninConfirmPassword"
        android:inputType="textPassword"
        android:textSize="20dp"/>



    <Button
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/colorPrimary"
        android:background="@color/Transparent"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:id="@+id/btnDoctorSignin"
        />





</LinearLayout>
